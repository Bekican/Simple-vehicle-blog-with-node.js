<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Edit: <%= vehicle.vehicleName %> <%= vehicle.vehicleModel %></h1>
    

    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
           <button class="btn btn-sm btn-outline-secondary">?</button>
        </div>
    </div>
</div>



<div class="col py-3">


    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Vehicles</a></li>
                    <li class="breadcrumb-item active"><%= vehicle.vehicleName %> <%= vehicle.vehicleModel %></li>
                </ol>
            </nav>
        </div>

        <div class="col text-end fw-lighter">
            <b>Last Updated :<%= new Date(vehicle.updatedAt).toUTCString() %></b>
            <b>CarId :</b> <%= vehicle._id %>
        </div>

    </div>



</div>


<form action="/edit/<%= vehicle._id %>?_method=PUT" method="POST">
    <div class="row form-group mb-4">
        <div class="ol">
            <label for="vehicleName">Vehicle Name</label>
            <input type="text" class="form-control" id="vehicleName" name="vehicleName" value="<%= vehicle.vehicleName %>" placeholder="Vehicle Name" required>

        </div>





        <div class="ol">
            <label for="vehicleModel">Vehicle Model</label>
            <input type="text" class="form-control" id="vehicleModel" name="vehicleModel" value="<%= vehicle.vehicleModel %>" placeholder="Vehicle Name" required>
            
        </div>
    </div>





      <div class="form-group mb-4">

          <label for="details">Vehicle Details</label>
          <textarea class="form-control" name="details" id="details" cols="30" rows="7" placeholder="Vehicle Details">
<%= vehicle.details %>
          </textarea>
            

      </div>
    


      <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Update Vehicle</button>


        <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Vehicle</button>
    </div>
    

</form>


<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">You are about to delete a vehicle record.</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>
                    This will remove the vehicle record of <b class="fw-bold"><%= vehicle.vehicleName %> <%= vehicle.vehicleModel %></b><br/>
                    Are you sure?

                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                <form action="/edit/<%= vehicle._id %>?_method=DELETE" method="POST" class="position-relative">
                    <button type="submit" class="btn btn-primary">Yes</button>
                </form>

                

            </div>
        </div>
    </div>
</div>